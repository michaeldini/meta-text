{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "typeRoots": [
            "./src/types",
            "./node_modules/@types"
        ],
        // Performance optimizations
        "incremental": true,
        "tsBuildInfoFile": "./node_modules/.cache/tsbuildinfo.json",
        // for testing
        "types": [
            "@testing-library/jest-dom"
        ],
        // Path aliases
        "baseUrl": "src",
        "paths": {
            "utils/*": [
                "utils/index.ts",
            ],
            "hooks/*": [
                "hooks/index.ts"
            ],
            "components/*": [
                "components/index.ts"
            ],
            "features/*": [
                "features/index.ts"
            ],
            "pages/*": [
                "pages/index.ts"
            ],
            "constants/*": [
                "constants/index.ts",
            ],
            "store/*": [
                "store/index.ts"
            ],
            "icons/*": [
                "components/icons/index.ts"
            ],
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts",
        "**/*.test.tsx"
    ]
}